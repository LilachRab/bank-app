generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email     String   @id @unique
  firstName String
  lastName  String
  password  String
  balance   Float
  sent      Transaction[] @relation("SentTransactions")
  received  Transaction[] @relation("ReceivedTransactions")
}

model Transaction {
  id          Int      @id @default(autoincrement())
  amount      Float
  senderEmail    String
  receiverEmail  String
  sender      User     @relation("SentTransactions", fields: [senderEmail], references: [email])
  receiver    User     @relation("ReceivedTransactions", fields: [receiverEmail], references: [email])
}
